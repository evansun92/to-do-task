<h2><%= t('common.user_list') %></h2>
<div class='text-center'>
  <%= link_to t('users.new'), new_admin_user_path, class: 'btn btn-outline-primary btn-sm m-3' %>
</div>
<table class='table table-hover text-center'>
  <tr>
    <th scope='col'><%= t('users.name') %></th>
    <th scope='col'><%= t('users.roles') %></th>
    <th scope='col'><%= t('users.email') %></th>
    <th scope='col'><%= t('users.tasks_count') %></th>
    <th scope='col'><%= t('common.edit') %></th>
    <th scope='col'><%= t('common.destroy') %></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, admin_user_path(user) %></td>
    <td><%#= user.roles %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks_count %></td>
    <td><%= link_to t('common.edit'), edit_admin_user_path(user) %></td>
    <td><%= link_to t('common.destroy'), admin_user_path(user), method: :delete, data:{ confirm: t('admin.messages.destroy', user: "#{user.name}")} %></td>
  </tr>
  <% end %>
</table>

<div class="col-12 mt-4">
    <%= paginate @users, outer_window: 3 %> 
</div>