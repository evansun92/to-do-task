<div class="card shadow-sm text-center pt-3 mt-3">
  <h3><%= @user.name %></h3>
  <p><%= @user.email %></p>
</div>

  <table class='table table-hover text-center'>
  <tr>
    <th scope='col'><%= t('tasks.title') %></th>
    <th scope='col'><%= t('tasks.end_at') %></th>
    <th scope='col'><%= t('common.priority') %></th>
    <th scope='col'><%= t('tasks.created_at') %></th>
    <th scope='col'><%= t('common.status') %></th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.end_at %></td>
    <td><%= task.priority %></td>
    <td><%= task.created_at.to_date %></td>
    <td><%= task.status %></td>
  </tr>
  <% end %>
</table>

<div class="col-12 mt-4 text-center">
  <%= link_to t('common.back'), admin_users_path %>
  <%= paginate @tasks, outer_window: 3 %> 
</div>